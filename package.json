{
  "name": "invoicer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node ./bin/www",
    "precommit": "standard --verbose | snazzy",
    "client": "yarn --cwd=client start",
    "server": "nodemon ./bin/www",
    "dev": "concurrently --kill-others-on-fail 'yarn server' 'yarn client'",
    "heroku-postbuild": "yarn build",
    "build": "cd client && yarn --production=false && yarn run build"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "ignore": [
      "/client/build"
    ]
  },
  "dependencies": {
    "@okta/jwt-verifier": "^0.0.11",
    "@okta/okta-sdk-nodejs": "^1.1.0",
    "body-parser": "~1.15.1",
    "cookie-parser": "~1.4.3",
    "debug": "^4.1.0",
    "express": "~4.13.4",
    "express-pino-logger": "^3.0.1",
    "http-errors": "^1.6.2",
    "jade": "~1.11.0",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.11",
    "morgan": "~1.7.0",
    "nedb": "^1.8.0",
    "pino": "^4.13.0",
    "serve-favicon": "~2.3.0",
    "snazzy": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "standard": "^11.0.0"
  }
}
