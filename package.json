{
  "name": "invoicer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "precommit": "standard --verbose | snazzy",
    "client": "cd client && yarn start",
    "server": "yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "standard": {
    "env": {
      "jest": true
    }
  },
  "dependencies": {
    "body-parser": "~1.15.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "express": "~4.13.4",
    "express-pino-logger": "^3.0.1",
    "http-errors": "^1.6.2",
    "jade": "~1.11.0",
    "lodash": "^4.17.5",
    "morgan": "~1.7.0",
    "pino": "^4.13.0",
    "serve-favicon": "~2.3.0",
    "snazzy": "^7.0.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "standard": "^11.0.0"
  }
}
